{% extends '@EasyAdmin/page/content.html.twig' %}

{% block main %}
    <style>
        .stats-container { display: flex; gap: 20px; margin-bottom: 40px; }
        .stat-card {
            background: #2c2c2c;
            border-radius: 10px;
            padding: 20px;
            flex: 1;
            text-align: center;
            border: 1px solid #444;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        }
        .stat-number { display: block; font-size: 2.5rem; font-weight: bold; color: #38bdf8; }
        .stat-label { color: #aaa; text-transform: uppercase; font-size: 0.8rem; letter-spacing: 1px; }

        /* Estilos para tus botones de abajo */
        .admin-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 20px; }
        .admin-card {
            background: #333; padding: 30px; border-radius: 10px; text-align: center;
            text-decoration: none; color: white; display: block; transition: 0.3s;
        }
        .admin-card:hover { background: #444; transform: translateY(-5px); }
    </style>

    <h1 class="mb-4">Panel de Control</h1>

    {# SECCIÓN DE ESTADÍSTICAS #}
    <div class="stats-container">
        <div class="stat-card">
            <span class="stat-number">{{ stats.total_usuarios }}</span>
            <span class="stat-label">Usuarios Registrados</span>
        </div>
        <div class="stat-card">
            <span class="stat-number">{{ stats.total_competiciones }}</span>
            <span class="stat-label">Competiciones</span>
        </div>
        <div class="stat-card">
            <span class="stat-number">{{ stats.total_categorias }}</span>
            <span class="stat-label">Categorías</span>
        </div>
    </div>

    <hr style="border-color: #444;">


{% endblock %}
