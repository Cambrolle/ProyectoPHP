                        <h5 class="mb-0">ü•á CLASIFICACI√ìN TIER LIST</h5>
                        <div class="dropdown">
                            <button class="btn btn-light btn-sm dropdown-toggle fw-bold" type="button" data-bs-toggle="dropdown">
                                {{ categorySelected ? categorySelected.name : 'Elegir Categor√≠a' }}
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                {% for cat in todasLasCategorias %}
                                    <li><a class="dropdown-item" href="{{ path('app_stats', {id: cat.id}) }}">{{ cat.name }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>

                    <div class="card-body p-0">
                        {% if rankingCategory %}
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-light small">
                                    <tr>
                                        <th class="text-center" style="width: 60px;">Pos</th>
                                        <th>Competici√≥n</th>
                                        <th class="text-end pe-4">Pos. Media Tier</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for item in rankingCategory %}
                                        {% set comp = item.competicion %}
                                        <tr>
                                            <td class="text-center">
                                                {% if loop.index == 1 %}ü•á{% elseif loop.index == 2 %}ü•à{% elseif loop.index == 3 %}ü•â{% else %}<span class="small fw-bold">#{{ loop.index }}</span>{% endif %}
                                            </td>
                                            <td>
                                                <a href="{{ path('app_competicion_show', {id: comp.id}) }}" class="text-dark text-decoration-none small fw-bold">
                                                    {{ comp.name }}
                                                </a>
                                            </td>
                                            <td class="text-end pe-4">
                                                    <span class="badge bg-info text-dark">
                                                        #{{ item.avgPos|number_format(1) }}
                                                    </span>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <div class="h-100 d-flex flex-column align-items-center justify-content-center p-5 text-muted text-center">
                                <i class="fa fa-list-ol mb-3 fs-1 opacity-25"></i>
