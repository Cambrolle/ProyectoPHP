                <div class="card shadow border-0 h-100">
                    <div class="card-header bg-dark text-white p-3 text-center">
                        <h5 class="mb-0">üèÜ TOP 5 GLOBAL</h5>
                    </div>
                    <div class="list-group list-group-flush">
                        {% for data in topCompeticiones %}
                            {% set c = data.competicion %}
                            <a href="{{ path('app_competicion_show', {id: c.id}) }}" class="list-group-item list-group-item-action d-flex align-items-center p-3">
                                <span class="me-3 fw-bold text-muted">{{ loop.index }}¬∫</span>
                                <img src="{{ c.emblem }}" style="width: 30px; height: 30px; object-fit: contain;" class="me-3">
                                <div class="flex-grow-1">
                                    <h6 class="mb-0 fw-bold small text-uppercase">{{ c.name }}</h6>
                                </div>
                                <span class="badge bg-warning text-dark">{{ data.media|number_format(1) }} ‚òÖ</span>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>

            {# TARJETA DERECHA: RANKING POR CATEGOR√çA #}
