{% extends 'base.html.twig' %}

{% block title %}Competiciones - LCDF{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row mb-4 align-items-center">
            <div class="col-md-6">
                <h1 class="fw-bold m-0">Todas las Competiciones</h1>
                <p class="text-muted">Busca y valora entre {{ competiciones|length }} resultados.</p>
            </div>

            {# FORMULARIO DE FILTROS #}
            <div class="col-md-6">
                <form action="{{ path('app_competicion') }}" method="GET" class="row g-2">
                    <div class="col-7">
                        <input type="text" name="search" class="form-control" placeholder="Buscar por nombre..." value="{{ searchTerm }}">
                    </div>
                    <div class="col-3">
                        <select name="type" class="form-select">
                            <option value="">Tipos</option>
                            <option value="LEAGUE" {{ selectedType == 'LEAGUE' ? 'selected' : '' }}>Ligas</option>
                            <option value="CUP" {{ selectedType == 'CUP' ? 'selected' : '' }}>Copas</option>
                            <option value="SUPER_CUP" {{ selectedType == 'SUPER_CUP' ? 'selected' : '' }}>Supercopas</option>
                            <option value="PLAYOFFS" {{ selectedType == 'PLAYOFFS' ? 'selected' : '' }}>Playoffs</option>
                        </select>
                    </div>
                    <div class="col-2">
                        <button type="submit" class="btn btn-dark w-100">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <hr>

        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            {% for c in competiciones %}
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 text-center p-3">
                        {# LOGO DE LA COMPETICIÓN #}
                        <div class="d-flex align-items-center justify-content-center" style="height: 120px;">
                            {% if c.emblem %}
                                <img src="{{ c.emblem }}" alt="Logo {{ c.name }}" style="max-height: 100px; max-width: 100%; object-fit: contain;">
                            {% else %}
                                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                    <span class="text-muted small">Sin Logo</span>
                                </div>
                            {% endif %}
                        </div>

                        <div class="card-body">
                            <h5 class="card-title fw-bold" style="font-size: 1.1rem;">{{ c.name }}</h5>
                            {# TRADUCCIÓN VISUAL DEL BADGE #}
                            <span class="badge bg-primary mb-2">
                                {% if c.type == 'LEAGUE' %}Liga
                                {% elseif c.type == 'CUP' %}Copa
                                {% elseif c.type == 'SUPER_CUP' %}Supercopa
                                {% elseif c.type == 'PLAYOFFS' %}Playoffs
                                {% else %}{{ c.type }}{% endif %}
                            </span>
                        </div>

                        <div class="card-footer bg-transparent border-0">
                            {% if app.user %}
                                <a href="{{ path('app_competicion_show', {id: c.id}) }}" class="btn btn-outline-dark btn-sm w-100">Valorar y Comentar</a>
                            {% else %}
                                <a href="{{ path('app_login') }}" class="btn btn-secondary btn-sm w-100">Loguéate para valorar</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center py-5">
                    <div class="alert alert-warning">No se han encontrado competiciones con esos filtros.</div>
                    <a href="{{ path('app_competicion') }}" class="btn btn-dark px-4">Limpiar búsqueda</a>
                </div>
            {% endfor %}
        </div>

        <div class="mt-5">
            <a href="{{ path('app_categories_index') }}" class="btn btn-secondary shadow-sm">
                <i class="fa fa-arrow-left me-1"></i> Volver a Categorías
            </a>
        </div>
    </div>
{% endblock %}
