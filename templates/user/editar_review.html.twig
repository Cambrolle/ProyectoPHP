{% extends 'base.html.twig' %}

{% block title %}Editar Valoración{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow p-4">
                    <h2 class="fw-bold mb-3 text-center">Editar mi Review</h2>
                    <p class="text-center text-muted">Estás editando tu opinión sobre <strong>{{ competicion.name }}</strong></p>
                    <hr>

                    {{ form_start(reviewForm) }}
                    {{ form_row(reviewForm.stars) }}
                    {{ form_row(reviewForm.comment) }}
                    <div class="d-grid gap-2 mt-4">
                        <button class="btn btn-dark">Guardar cambios</button>
                        <a href="{{ path('app_mis_reviews') }}" class="btn btn-link text-muted">Cancelar</a>
                    </div>
                    {{ form_end(reviewForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
