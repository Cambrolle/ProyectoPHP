{% extends 'base.html.twig' %}

{% block title %}Mi Ranking - {{ category.name }}{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="fw-bold">Mi Tier List: {{ category.name }}</h1>
            <a href="{{ path('app_categories_index') }}" class="btn btn-outline-secondary">Volver</a>
        </div>

        <div class="tier-container shadow-sm overflow-hidden rounded">
            {% set tiers = [
                {'label': 'S', 'val': 1, 'color': 'bg-danger'},
                {'label': 'A', 'val': 2, 'color': 'bg-warning text-dark'},
                {'label': 'B', 'val': 3, 'color': 'bg-success'},
                {'label': 'C', 'val': 4, 'color': 'bg-info text-dark'}
            ] %}

            {% for tier in tiers %}
                <div class="d-flex border-bottom" style="min-height: 100px;">
                    <div class="{{ tier.color }} d-flex align-items-center justify-content-center fw-bold" style="width: 100px; font-size: 2rem;">
                        {{ tier.label }}
                    </div>
                    <div class="flex-grow-1 p-3 d-flex flex-wrap gap-3 bg-dark bg-opacity-10">
                        {% for rc in ranking.rankingCompeticions %}
                            {% if rc.position == tier.val %}
                                <div class="text-center" style="width: 80px;">
                                    <img src="{{ rc.competicion.emblem }}" class="img-fluid mb-1" style="max-height: 60px;">
                                    <div class="small fw-bold text-truncate" style="font-size: 0.7rem;">{{ rc.competicion.name }}</div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="mt-4 d-flex justify-content-center gap-3">
            <a href="{{ path('app_categories_index') }}" class="btn btn-outline-secondary px-4">
                <i class="fa fa-arrow-left"></i> Volver a categorías
            </a>

            <form action="{{ path('app_ranking_edit', {id: ranking.id}) }}" method="POST" onsubmit="return confirm('¿Seguro que quieres borrar este ranking para hacer uno nuevo?');">
                <button type="submit" class="btn btn-warning px-4 fw-bold">
                    <i class="fa fa-edit"></i> Editar mi Ranking
                </button>
            </form>
        </div>
    </div>
{% endblock %}
